<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Kibegi" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lightgreen</item>
        <item name="colorPrimaryVariant">@color/lightgreen</item>
        <item name="colorOnPrimary">@color/lightgreen</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/lightgreen</item>
        <item name="colorSecondaryVariant">@color/lightgreen</item>
        <item name="colorOnSecondary">@color/lightgreen</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="fontFamily">@font/gabriel_sans_normal</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Transparent" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lightgreen</item>
        <item name="colorPrimaryVariant">@color/lightgreen</item>
        <item name="colorOnPrimary">@color/lightgreen</item>


        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/lightgreen</item>
        <item name="colorSecondaryVariant">@color/lightgreen</item>
        <item name="colorOnSecondary">@color/lightgreen</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="fontFamily">@font/gabriel_sans_normal</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SplashScreenTheme" parent = "Theme.AppCompat.NoActionBar">
    <item name="android:windowBackground">@drawable/splash_screen_background</item>
</style>
</resources>